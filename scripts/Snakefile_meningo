configfile: "phet.yaml"

#target rules#

if config["meningitidis"]:
      rule meningotype:
            input:
                  expand("filtered_contigs/{sample}.fna", sample=config["meningitidis"])
            output:
                  "PHET/Neisseria/meningitidis/meningotype.txt"
            conda:
                  "phetype"
            shell:
                  "meningotype --bast --finetype --porB {input} > {output}"
