configfile: "phet.yaml"


if config["tuberculosis"]:
    rule all:
           input:
                expand("results/{sample}.csv", sample=config["tuberculosis"]),
                expand("results/{sample}.json", sample=config["tuberculosis"])

if config["tuberculosis"]:
    rule tbprofiler:
         input: 
             R1 = "input/{sample}_R1.fastq.gz",
             R2 = "input/{sample}_R2.fastq.gz"
         output: 
             "results/{sample}.csv",
             "results/{sample}.json"
         params:
              name = "{sample}"
         conda:
              "tbprofiler"
         shell: 
              "tb-profiler profile -1 {input.R1} -2 {input.R2} --csv -p {params.name} --dir /scratch/mycobacterium/MTBC/tb_profiler"
